<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/onboarding_done_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/onboarding_header_image_height"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/onboarding_done"
            android:src="@drawable/ic_ok_complete" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:textAppearance="?attr/textAppearanceHeadline3"
            android:text="@string/onboarding_done" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</layout>
